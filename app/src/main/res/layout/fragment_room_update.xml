<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:background="@drawable/other_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Update Room"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center">
        </TextView>

        <ImageView
            android:id="@+id/updateRoom_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:clickable="true"
            android:src="@drawable/camera">
        </ImageView>
        <Button
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/updateRoom_UpdatePic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Update Picture"
            android:textColor="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/card">

            <EditText
                android:id="@+id/updateRoom_roomId"
                android:background="@drawable/grey_rounded"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Room ID"
                android:textColorHint="@color/white"
                android:textColor="@color/black">
            </EditText>

            <EditText
                android:id="@+id/updateRoom_newPrice"
                android:background="@drawable/grey_rounded"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/updateRoom_roomId"
                android:hint="Enter New Price"
                android:textColorHint="@color/white"
                android:textColor="@color/black">
            </EditText>
            <Button
                android:id="@+id/updateRoom_updatePrice"
                android:layout_below="@id/updateRoom_newPrice"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Update Price"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>