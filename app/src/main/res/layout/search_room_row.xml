<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/purple_200"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/card">

        <ImageView
            android:id="@+id/search_room_pic"
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/search_room_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/search_room_pic" />

        <TextView
            android:id="@+id/search_room_id"

            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_room_desc"
            android:layout_toRightOf="@id/search_room_pic"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/search_room_price"

            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_below="@id/search_room_desc"

            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            />

    </RelativeLayout>


</RelativeLayout>