<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addRoomFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@drawable/other_background">
        <TextView
            android:id="@+id/addRoom_Title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Add Room"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/white">

        </TextView>
        <ImageView
            android:id="@+id/addRoom_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:clickable="true"
            android:src="@drawable/camera">
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/card"
            >
            <EditText
                android:id="@+id/addRoom_Id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Room Id"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/grey_rounded"
                android:textColorHint="@color/white"
                android:textColor="@color/white">
            </EditText>
            <EditText
                android:id="@+id/addRoom_Price"
                android:background="@drawable/grey_rounded"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/addRoom_Id"
                android:hint="Enter Room Price"
                android:textColorHint="@color/white"
                android:textColor="@color/white">
            </EditText>
            <EditText
                android:id="@+id/addRoom_Description"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_rounded"
                android:layout_below="@+id/addRoom_Price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:hint="Enter Room Description"
                android:textColorHint="@color/white"
                android:textColor="@color/white">
            </EditText>
            <Button
                android:id="@+id/addRoom_addRoom"
                android:layout_below="@id/addRoom_Description"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Add Room"
                android:textColor="@color/white">
            </Button>
        </RelativeLayout>


    </LinearLayout>



</FrameLayout>